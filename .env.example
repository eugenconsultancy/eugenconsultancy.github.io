# Django Core Settings
SECRET_KEY=your-super-secret-key-here-at-least-50-characters-long
DEBUG=False
ALLOWED_HOSTS=.leapcell.dev,localhost,127.0.0.1,yourdomain.com

# Database (Leapcell will provide this)
DATABASE_URL=postgresql://username:password@host:port/dbname

# Security
CSRF_TRUSTED_ORIGINS=https://*.leapcell.dev,https://yourdomain.com

# Email Configuration (for contact form)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
ADMIN_EMAIL=admin@example.com

# Redis (for Celery and Caching)
REDIS_URL=redis://username:password@host:port
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# GitHub Integration (optional)
GITHUB_USERNAME=your-github-username
GITHUB_TOKEN=your-github-personal-access-token

# Dev.to Integration (optional)
DEVTO_USERNAME=your-devto-username

# Medium Integration (optional)
MEDIUM_USERNAME=your-medium-username

# AWS S3 for Media Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1